<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rm_activity_item10_ln_01"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:background="@color/white_transparent">

    <androidx.cardview.widget.CardView
        android:id="@+id/rm_activity_item10_cv_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rm_activity_item10_cl_01"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:background="@drawable/rm_bg_white_transparent">

            <ImageView
                android:id="@+id/rm_activity_item10_img_01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/rm_bacgroup_05"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/rm_activity_item10_img_02"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/rm_ic_live_02"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rm_activity_item10_cl_02"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:id="@+id/rm_activity_item10_tv_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_item10"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rm_activity_item10_tv_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alex sun"
            android:textColor="@color/rm_text_dot"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/rm_activity_item10_tv_01"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rm_activity_item10_tv_01" />

        <LinearLayout
            android:id="@+id/rm_activity_item10_ln_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rm_activity_item10_tv_02" >

            <TextView
                android:id="@+id/rm_activity_item10_tv_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="367 Views"
                android:textColor="@color/rm_text_dot"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/rm_activity_item10_tv_04"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/rm_bg_grey"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/rm_activity_item10_tv_05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 hours"
                android:textColor="@color/rm_text_dot"
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:gravity="center"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
