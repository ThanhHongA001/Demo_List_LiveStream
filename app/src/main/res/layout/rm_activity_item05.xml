<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rm_activity_item05"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white_transparent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_marginTop="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item05"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:cardCornerRadius="1000dp"
        android:padding="4dp"
        android:scaleType="centerCrop"
        android:background="@drawable/rm_bg_btn_rounded_border_01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/rm_activity_item05_img_01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/rm_bacgroup_05"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/rm_activity_item05_tv_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Jone  Jone"
        android:textColor="@color/main_color_new"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_item05" />

</androidx.constraintlayout.widget.ConstraintLayout>
