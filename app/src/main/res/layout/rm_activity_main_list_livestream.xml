<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rm_activity_main_list_livestream_ln_01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rm_backgroup_vote"
    android:orientation="vertical"
    tools:context=".MainActivity_List_LiveStream.MainActivity_List_LiveStream">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rm_activity_main_list_livestream_cl_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/rm_activity_main_list_livestream_img_01"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:src="@drawable/rm_ic_navigation_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rm_activity_main_list_livestream_tv_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="List LiveStream"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/rm_activity_main_list_livestream_img_02"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="3dp"
            android:src="@drawable/rm_ic_star_coin_01"
            android:layout_marginRight="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/rm_activity_main_list_livestream_img_03"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/rm_activity_main_list_livestream_img_03"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="3dp"
            android:src="@drawable/rm_ic_search_02"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- RecyclerView để hiển thị các Fragment -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rm_activity_main_list_livestream_rv_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white_transparent"/>

</LinearLayout>
