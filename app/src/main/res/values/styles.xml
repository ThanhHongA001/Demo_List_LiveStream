<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Phong cách chung cho Button -->
    <style name="Base.ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PrimaryButton" parent="Base.ButtonStyle">
        <item name="android:background">@color/rm_button_livestream_01</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SecondaryButton" parent="Base.ButtonStyle">
        <item name="android:background">@color/rm_button_livestream_02</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Phong cách cho TextView -->
    <style name="HeaderText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
    </style>


</resources>
