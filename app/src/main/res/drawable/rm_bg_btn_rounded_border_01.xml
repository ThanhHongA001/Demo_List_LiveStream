<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Trạng thái khi bấm (pressed) - Viền màu xanh -->
    <item
        android:state_pressed="true">

        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/white_transparent"/>

            <corners
                android:radius="2500dp"/>

            <stroke
                android:width="2dp"
                android:color="@color/rm_button_click01"/>

        </shape>
    </item>

    <!-- Trạng thái bình thường - Viền màu trắng -->
    <item>
        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/white_transparent"/>

            <corners
                android:radius="2500dp"/>

            <stroke
                android:width="2dp"
                android:color="@color/white"/>
        </shape>
    </item>

</selector>
